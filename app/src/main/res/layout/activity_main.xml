<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FCF5ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#000000"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:text="로그인해주세요!"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="33dp"
            tools:ignore="MissingConstraints"  />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_height="47dp"
            android:text="좋은 문구"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="126dp"
            tools:ignore="MissingConstraints" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/booklist"

            android:padding="0sp"
            android:scaleType="centerInside"
            android:layout_height="170dp"
            android:layout_width="200dp"
            android:backgroundTint="#FCF5ED"
            android:onClick="onBtnClick"
            android:src="@drawable/noteicon2" />

        <ImageButton
            android:id="@+id/bookNote"

            android:padding="0sp"
            android:scaleType="centerInside"
            android:layout_height="170dp"
            android:layout_width="200dp"
            android:backgroundTint="#FCF5ED"
            android:onClick="onBtnClick"
            android:src="@drawable/bookshelficon" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/bookMap"

            android:padding="0sp"
            android:scaleType="centerInside"
            android:layout_height="170dp"
            android:layout_width="200dp"
            android:backgroundTint="#FCF5ED"
            android:onClick="onBtnClick"
            android:src="@drawable/mapicon" />

        <ImageButton
            android:id="@+id/bookTimer"
            android:onClick="onBtnClick"
            android:backgroundTint="#FCF5ED"
            android:scaleType="centerInside"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:src="@drawable/timer" />

    </LinearLayout>
    </LinearLayout>


</LinearLayout>